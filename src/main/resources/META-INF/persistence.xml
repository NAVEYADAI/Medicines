<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>Entity.InventoryEntity</class>
        <class>Entity.NameOfBallEntity</class>
        <class>Entity.NeedToTakeEntity</class>
        <class>Entity.PrescriptionsEntity</class>
        <class>Entity.RestrictionsEntity</class>
        <class>Entity.RestrictionsOfUserEntity</class>
        <class>Entity.TakeBallEntity</class>
        <class>Entity.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/Medicines"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="nave"/>
            <property name="hibernate.connection.password" value="1234"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
